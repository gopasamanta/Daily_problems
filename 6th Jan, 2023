num1 = float(input("Enter First Number: "))
num2 = float(input("Enter Second Number: "))
op =  input("Choose the operation: ( +, -, *, / ): ")

if( op == "+"):
  print( num1 + num2)
elif( op == "-"):
  print( num1 - num2)
elif( op == "*"):
  print( num1 * num2)
elif( op == "/"):
  print( num1 / num2)
else:
  print("INVALID OPERATOR!!!")
